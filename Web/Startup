        private Page GetErrorPage()
        {
            var result = new Page();

            result.Title = "Error";
            result.Body = "Error";
            result.Head = "";

            return result;
        }
    }

    class Page
    {
        public string Title { get; set; }
        public string Body { get; set; }
        public string Head { get; set; }
    }
