using System;
using System.Collections.Generic;
using System.Linq;
using System.Threading.Tasks;
using Microsoft.AspNetCore.Builder;
using Microsoft.AspNetCore.Hosting;
using Microsoft.AspNetCore.Http;
using Microsoft.Extensions.DependencyInjection;

namespace Web
{
    public class Startup
    {
        // This method gets called by the runtime. Use this method to add services to the container.
        // For more information on how to configure your application, visit https://go.microsoft.com/fwlink/?LinkID=398940
        public void ConfigureServices(IServiceCollection services)
        {
        }

        // This method gets called by the runtime. Use this method to configure the HTTP request pipeline.
        public void Configure(IApplicationBuilder app, IHostingEnvironment env)
        {
            if (env.IsDevelopment())
            {
                app.UseDeveloperExceptionPage();
            }

            app.UseStaticFiles();

            app.Run(async (context) =>
            {

                var page = context.Request.Path;

                switch (page)
                {
                    case "/":
                        await context.Response.WriteAsync(GetPage("index"));
                        break;

                    case "/accounts":
                        await context.Response.WriteAsync(GetPage("accounts"));
                        break;

                    case "/add-product":
                        await context.Response.WriteAsync(GetPage("addProduct"));
                        break;

                    case "/edit-product":
                        await context.Response.WriteAsync(GetPage("editProduct"));
                        break;

                    case "/login":
                        await context.Response.WriteAsync(GetPage("login"));
                        break;

                    case "/products":
                        await context.Response.WriteAsync(GetPage("products"));
                        break;

                    default:
                        await context.Response.WriteAsync(GetPage("error"));
                        break;
                }

            });
        }

        private string GetPage(string pageName)
        {
            Page page;

            switch (pageName)
            {
                case "index":
                    page = GetIndexPage();
                    break;
                case "accounts":
                    page = GetAccountsPage();
                    break;
                case "addProduct":
                    page = GetAddProductPage();
                    break;
                case "editProduct":
                    page = GetEditProductPage();
                    break;
                case "login":
                    page = GetLoginPage();
                    break;
                case "products":
                    page = GetProductsPage();
                    break;
                default:
                    page = GetErrorPage();
                    break;
            }

            var result = $@"
<!DOCTYPE html>
<html lang='en'>
<head>
    <meta charset='UTF-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1.0'>
    <meta http-equiv='X-UA-Compatible' content='ie=edge'>
    <title>{page.Title}</title>
    <!--

    Template 2108 Dashboard

	http://www.tooplate.com/view/2108-dashboard

    -->
    {page.Head}
</head>
{page.Body}
</html>
";
            return result;

        }
